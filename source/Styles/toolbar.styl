

.vertical-tool-bar
  background ignorable2
  height 100%
  border-right 1px ignorable3 solid
  padding-top 1px
  position fixed
  top 0px
  left 0px
  width 29px
  
.horizontal-tool-bar
  background ignorable2
  position fixed
  bottom 0px
  padding-top 1px

.horizontal-tool-bar-edge
  height 3px 
  border-top 1px offBlue solid
  top 0px
  left 0px
  cursor ns-resize
  
