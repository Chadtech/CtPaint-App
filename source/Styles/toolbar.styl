.vertical-tool-bar
    background ignorable2
    height 100%
    border-right 1px ignorable3 solid
    padding-top 30px
    position fixed
    top 0px
    left 0px
    width 29px

.horizontal-tool-bar
    background ignorable2
    position fixed
    bottom 0px
    left 29px
    width calc(100% - 29px)

    .edge
        height 3px 
        border-top 2px ignorable1 solid
        top 0px
        left 0px
        cursor ns-resize
        
    .info-box
        border-left 2px solid ignorable3
        border-top 2px solid ignorable3
        border-right 2px solid ignorable0
        border-bottom 2px solid ignorable0
        background backgroundx2
        
        width 294px
        
        position absolute
        left calc(100% - 300px)
        top 4px
        // height 100%

        overflow-y scroll
    
.top-tool-bar
    background ignorable2
    height 29px
    width calc(100% - 29px)
    left 29px
    position absolute
    border-bottom 1px ignorable3 solid
