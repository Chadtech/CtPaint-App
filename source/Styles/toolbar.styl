.vertical-tool-bar
    background ignorable2
    height 100%
    border-right 1px ignorable3 solid
    padding-top 30px
    position fixed
    top 0px
    left 0px
    width 29px

.horizontal-tool-bar
    background ignorable2
    position fixed
    bottom 0px
    left 29px
    width calc(100% - 29px)

    .edge
        height 3px 
        border-top 2px ignorable1 solid
        top 0px
        left 0px
        cursor ns-resize
        
    .info-box
        border-left 2px solid ignorable3
        border-top 2px solid ignorable3
        border-right 2px solid ignorable0
        border-bottom 2px solid ignorable0
        background backgroundx2
        
        width 294px
        
        position absolute
        left calc(100% - 300px)
        top 4px

        overflow-y scroll
        
        p
            display inline-block
            margin-right 11px


.invisible-wall
    width calc(100% + 29px)
    height 100vh
    position absolute
    top 0px
    left -29px
    z-index 1
    
.top-tool-bar
    background ignorable2
    height 29px
    width calc(100% - 29px)
    left 29px
    position absolute
    border-bottom 1px ignorable3 solid
    
    .task-bar-button
        z-index 2
        &.current
            z-index 3
        .seam
            background ignorable2
            height 2px
            left 0px
            z-index 4
            width calc(100% + 2px)
            position absolute

        .options
            position absolute
            left -2px
            background ignorable2
            width 300px
            border-top 2px solid ignorable1
            border-left 2px solid ignorable1
            border-right 2px solid ignorable3
            border-bottom 2px solid ignorable3
            
            &.help
                width 110px
                .option
                    width 104px
                
            &.view
                width 200px
                .option
                    width 194px
                        
            &.edit
                width 220px
                .option
                    width 214px
                .divider
                    .strike
                        width 212px
                        
            &.file
                width 220px
                .option
                    width 214px
                .divider
                    .strike
                        width 212px
                        
            &:hover
                color pointColor
                
            .divider
                height 16px
                position relative
                &:hover
                    background none
                    
                .strike
                    position absolute
                    top 6px
                    left 4px
                    height 0px
                    width 292px
                    border-top 2px solid ignorable3
                    border-bottom 2px solid ignorable1

            .option
                height 32px
                width 296px
                padding-left 4px
                position relative
                justify-content space-between
                vertical-align middle

                display flex
                    
                p
                    height 32px
                    display table-cell
                    margin-left 4px
                    margin-top 5px
                    margin-right 4px
                    

                &:hover 
                    background pointColor

                    p
                        color ignorable3


