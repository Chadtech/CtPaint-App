a
    font-family hfnss
    color pointColor
    -webkit-font-smoothing none
    padding 0
    font-size 2em
    text-decoration none
    
    border-top 2px solid ignorable1
    border-left 2px solid ignorable1
    border-right 2px solid ignorable3
    border-bottom 2px solid ignorable3
    
    background ignorable2
    display inline-block
    
    padding-top 4px
    padding-bottom 4px
    padding-left 8px
    padding-right 8px
    
    cursor pointer
    
    -webkit-user-select: none;  
    -moz-user-select: none;    
    -ms-user-select: none;      
    user-select: none;
    
    &:hover
        color pointier
        
    &:active
        border-top 2px solid ignorable3
        border-left 2px solid ignorable3
        border-right 2px solid ignorable1
        border-bottom 2px solid ignorable1
        
    &.selected
        border-top 2px solid ignorable3
        border-left 2px solid ignorable3
        border-right 2px solid ignorable1
        border-bottom 2px solid ignorable1
        
    &.nulled
        background ignorable1
        
        &:hover
            color pointColor
            
        &:active
            border-top 2px solid ignorable1
            border-left 2px solid ignorable1
            border-right 2px solid ignorable3
            border-bottom 2px solid ignorable3