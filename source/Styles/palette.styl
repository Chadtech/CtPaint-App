.palette
    position absolute
    top 4px
    left 0px
    
    width calc(100% - 4px)
    height 100%
    
    .swatches
        margin-left -27px
        
        position absolute
        top 0px
        left 0px
          
        .swatch
            position absolute
            
            height 20px
            border-left 2px solid ignorable3
            border-top 2px solid ignorable3
            border-right 2px solid ignorable0
            border-bottom 2px solid ignorable0

            &.primary   
                top 0px
                left 0px
                width 74px
              
            &.first
                top 28px
                left 0px
                width 20px

            &.second
                top 28px
                left 27px
                width 20px
              
            &.third   
                top 28px
                left 54px
                width 20px  
                
    .general
        border-left 2px solid ignorable3
        border-top 2px solid ignorable3
        border-right 2px solid ignorable0
        border-bottom 2px solid ignorable0
        background backgroundx2
        
        width calc(100% - 358px)
        
        position absolute
        left 55px
        top 0px
        
        overflow-y scroll
                
        .square
            height 20px
            width 20px
            border-left 1px solid ignorable3
            border-top 1px solid ignorable3
            border-right 1px solid ignorable0
            border-bottom 1px solid ignorable0
        

            display inline-block
            


